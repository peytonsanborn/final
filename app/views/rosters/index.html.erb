<div>
  <div>
    <h1>
      List of all rosters
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new roster
    </h2>

    <form action="/insert_roster" method="post">
      <div>
        <label for="event_id_box">
          Event
        </label>

        <input type="text" id="event_id_box" name="query_event_id">
      </div>

      <div>
        <label for="guests_id_box">
          Guests
        </label>

        <input type="text" id="guests_id_box" name="link">
      </div>

      <button>
        Create roster
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Event
        </th>

        <th>
          Guests
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_rosters.each do |a_roster| %>
      <tr>
        <td>
          <%= a_roster.id %>
        </td>

        <td>
          <%= a_roster.event_id %>
        </td>

        <td>
          <%= a_roster.guests_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_roster.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_roster.updated_at) %> ago
        </td>

        <td>
          <a href="/rosters/<%= a_roster.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
