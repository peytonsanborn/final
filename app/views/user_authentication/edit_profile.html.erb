<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="attending_id_box">Attending</label>
        <input id="attending_id_box" name="query_attending_id" value="<%= @current_user.attending_id %>">
      </div>
      <div>
        <label for="biology_box">Biology</label>
        <input id="biology_box" name="query_biology" value="<%= @current_user.biology %>">
      </div>
      <div>
        <label for="profile_image_box">Profile image</label>
        <input id="profile_image_box" name="query_profile_image" value="<%= @current_user.profile_image %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
